{% if boilerplate.settings.extras.bootstrap.cdn %}
    {# REQUIRED: If you don't already have it set in your META tags configuration, uncomment the two <meta> lines below: #}

    {# <meta charset="utf-8"> #}
    {# <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"> #}

    <!-- Bootstrap's CSS file (via CDN) -->
    <link
        href="https://stackpath.bootstrapcdn.com/bootstrap/{{boilerplate.settings.extras.bootstrap.version}}/css/bootstrap.min.css"
        integrity="{{boilerplate.settings.extras.bootstrap.css_integrity}}"
        crossorigin="anonymous"
        rel="stylesheet">
{% else %}
    <!-- Bootstrap Local (via COMPOSER) -->
    <link href="{{vendor}}/twbs/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
{% endif %}