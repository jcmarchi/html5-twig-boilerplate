              'parsley', 'pnotify', 'progressbar',
              'select2', 'skycons', 'smart_wizard', 'sparklines', 'starrr', 'switchery',
              'tags_input', 'validator', 'wysiwyg'
  ------------------------------------------------------------------------------------------
#}
{% set gentelella = {
        'location': boilerplate.path.plugins ~ '/gentelella',
        'fixed' : {
            'header' : true,
            'sidebar': true,
            'footer' : true
