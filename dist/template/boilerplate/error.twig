{% extends "layout/page.twig" %}

{# Don't forget to set the <title> of your page. #}
{% block title %}Error Page{% endblock %}

{# This is the BODY CONTENT of your page. #}
{% block bodycontent %}
    <!-- The body of the page goes here -->
    <h2>Oh, no... Looks like you've tripped on something!</h2>
    <h3>Status Code ({{ErrorCode}})</h3>
    <p>
        But, don't worry! You didn't break anything... It is just a simple error page.
    </p>
{% endblock %}

{########################################################################################
