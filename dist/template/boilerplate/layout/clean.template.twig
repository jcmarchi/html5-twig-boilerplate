<!DOCTYPE html>
{# START: Environment Tweaks #}
{% if boilerplate.environment.simulated is not null and boilerplate.environment.simulated is not empty %}
	{% set TheEnvironment = boilerplate.environment.simulated %}
{% else %}
	{% set TheEnvironment = boilerplate.environment.current %}
{% endif %}
{# END: Environment Tweaks #}

{# ###########################################
   BEGIN <HEAD> TAG
########################################### #}
<head>
{# -- START: BLOCK HEAD ---------------- #}
{% block HEAD %}
{# ------------------------------------- #}

    <title>{% block title %}{% endblock %}</title>

	<!-- START: STYLES -->
{% block styles %}
{% if boilerplate.settings.extras.bootstrap.install %}
{{ include("snippets/bootstrap-css.twig") }}
{% endif %}
{% endblock %}
    <!-- END: STYLES -->

{# -- END: BLOCK HEAD ------------------ #}
{% endblock %}
{# ------------------------------------- #}
</head>
{# ###########################################
   END </HEAD> TAG
########################################### #}

{# ###########################################
   BEGIN <BODY> TAG
########################################### #}
<body {% block BODYTAG %}{% endblock %} >
{# -- START: BLOCK BODY ---------------- #}
{% block BODY %}
{# ------------------------------------- #}

    <!-- START: JAVASCRIPT files -->
{% if boilerplate.settings.extras.jquery.install == true %}
{{ include('snippets/jquery.twig') }}
{% endif %}
{% if boilerplate.settings.extras.bootstrap.install == true %}
{{ include('snippets/bootstrap-js.twig') }}
{% endif %}

    <!-- jQuery Additional Features & Plugins -->
{% block scripts %}
{% endblock %}

{# -- END: BLOCK BODY ------------------ #}
{% endblock %}
{# ------------------------------------- #}
</body>
{# ###########################################
   END </BODY> TAG
########################################### #}
</html>
